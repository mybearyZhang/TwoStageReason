{
    "name": "RAVEN-CVR-SVRT-Bongard-BongardLogo|CNN",
    "n_gpu": 4,
    "feature_models": {
        "RAVEN": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 16,
                "pretrained": false,
                "dropout": 0.3498992409645899,
                "keep_shape": true
            }
        },
        "CVR": {
            "type": "CvrFeature",
            "args": {
                "dropout": 0.4,
                "keep_shape": true
            }
        },
        "SVRT": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false,
                "dropout": 0.16244171674777802,
                "keep_shape": true
            }
        },
        "Bongard": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 12,
                "pretrained": false,
                "dropout": 0.3498992409645899,
                "keep_shape": true
            }
        },
        "BongardLogo": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 14,
                "pretrained": false,
                "dropout": 0.3498992409645899,
                "keep_shape": true
            }
        }
    },
    "reason_model": {
        "type": "CNN",
        "args": {
            "num_classes": 8,
            "pretrained": true
        }
    },
    "head_models": {
        "RAVEN": {
            "type": "MLPHead",
            "args": {
                "input_size": 8,
                "hidden_sizes": [8],
                "output_size": 8
            }
        },
        "CVR": {
            "type": "CvrHead",
            "args": {}
        },
        "SVRT": {
            "type": "MLPHead",
            "args": {
                "input_size": 8,
                "hidden_sizes": [4],
                "output_size": 2
            }
        },
        "Bongard": {
            "type": "MLPHead",
            "args": {
                "input_size": 8,
                "hidden_sizes": [4],
                "output_size": 2
            }
        },
        "BongardLogo": {
            "type": "MLPHead",
            "args": {
                "input_size": 8,
                "hidden_sizes": [4],
                "output_size": 2
            }
        }
    },
    "data_loaders": {
        "RAVEN": {
            "type": "RavenDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/RAVEN-10000/",
                "batch_size": 16,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 8
            }
        },
        "CVR": {
            "type": "CvrDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/CVR",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 8,
                "n_samples": 1000
            }
        },
        "SVRT": {
            "type": "SvrtDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/svrt/results_problem_21/",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 8
            }
        },
        "Bongard": {
            "type": "BongardDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/bongard/bongard-problems/",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 8
            }
        },
        "BongardLogo": {
            "type": "BongardLogoDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/bongard/ShapeBongard_V2",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 8
            }
        }
    },
    "optimizers": {
        "RAVEN": {
            "type": "Adam",
            "args":{
                "lr": 0.00014078502211427725,
                "weight_decay": 0.0002242309875662113,
                "amsgrad": true
            }
        },
        "CVR": {
            "type": "Adam",
            "args":{
                "lr": 0.0003663133221267387,
                "weight_decay": 3.3257157891906423e-06,
                "amsgrad": true
            }
        },
        "SVRT": {
            "type": "Adam",
            "args":{
                "lr": 5.991130809154712e-05,
                "weight_decay": 6.376195552090027e-05,
                "amsgrad": true
            }
        },
        "Bongard": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        },
        "BongardLogo": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        },
        "reasoning": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "RAVEN": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "CVR": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "SVRT": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "Bongard": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "BongardLogo": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "reasoning": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "losses": {
        "RAVEN": "cross_entropy_loss",
        "CVR": "cross_entropy_loss",
        "SVRT": "cross_entropy_loss",
        "Bongard": "cross_entropy_loss",
        "BongardLogo": "cross_entropy_loss"
    },
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "epochs": 100,

        "save_dir": "/Disk2/xuyue/reasoning/saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "max total_val_acc",
        "early_stop": 10,

        "entry_epochs": {
            "RAVEN": 0,
            "CVR": 40,
            "SVRT": 0,
            "Bongard": 35,
            "BongardLogo": 10
        },

        "pick_prob": true,

        "tensorboard": false,
        "wandb": true
    },
    "wandb_sweep": {
        "method": "bayes",
        "metric": {
            "name": "best_total_val_acc",
            "goal": "maximize"
        },
        "parameters": {
            "lr": {
                "distribution": "log_uniform_values",
                "min": 1e-5, 
                "max": 1e-2
            },
            "weight_decay": {
                "distribution": "log_uniform_values", 
                "min": 1e-8, 
                "max": 1e-3
            }
        }
    }
}
