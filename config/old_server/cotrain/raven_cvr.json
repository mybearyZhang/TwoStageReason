{
    "name": "RAVEN-CVR",
    "n_gpu": 4,
    "feature_models": {
        "RAVEN": {
            "type": "RavenFeature",
            "args": {}
        },
        "CVR": {
            "type": "CvrFeature",
            "args": {}
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {}
    },
    "head_models": {
        "RAVEN": {
            "type": "RavenHead",
            "args": {}
        },
        "CVR": {
            "type": "CvrHead",
            "args": {}
        }
    },
    "data_loaders": {
        "RAVEN": {
            "type": "RavenDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/RAVEN-10000/",
                "batch_size": 16,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 2
            }
        },
        "CVR": {
            "type": "CvrDataLoader",
            "args":{
                "data_dir": "/Disk4/xuyue/reasoning/CVR",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 2,
                "n_samples": 1000
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "losses": {
        "RAVEN": "cross_entropy_loss",
        "CVR": "cross_entropy_loss"
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "entry_epochs": {
            "RAVEN": 0,
            "CVR": 0
        },

        "pick_prob": true,

        "tensorboard": true
    }
}
