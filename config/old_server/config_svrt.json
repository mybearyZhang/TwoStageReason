{
    "name": "sota-SVRT",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "dropout": 0.13713746566589535
        }
    },
    "reason_model": {
        "type": "Transformer",
        "args": {
            "input_size": 512,
            "output_size": 8,
            "num_layers": 6,
            "nhead": 8
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 8,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "SvrtDataLoader",
        "args":{
            "data_dir": "/Disk4/xuyue/reasoning/svrt/results_problem_21/",
            "batch_size": 8,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 2.493911651397638e-05,
            "weight_decay": 0.00010869727547514425,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
