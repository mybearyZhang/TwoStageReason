{
    "name": "SVRT-optuna",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "dropout": 0.3498992409645899
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "SvrtDataLoader",
        "args":{
 			"data_dir": "/Disk4/xuyue/reasoning/svrt/results_problem_21/",
            "batch_size": 8,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": false,
        "wandb": false
    },
    "optuna": {
        "n_trials": 100,
        "study_name": "SVRT_bz8_MLP_512_64_fix",
        "storage": "sqlite:///saved/optuna/svrt.db",
        "load_if_exists": true,

        "monitor": "max val_accuracy",

        "models": {
            "dropout": {
                "min": 0,
                "max": 0.8
            }
        },

        "params": {
            "learning_rate": {
                "min": 1e-6,
                "max": 1e-3
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-2
            }
        }
    }
}
