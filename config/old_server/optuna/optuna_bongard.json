{
    "name": "Bongard-Transformer",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 12,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "keep_dim": false,
            "state": 0
        }
    },
    "reason_model": {
        "type": "Transformer",
        "args": {
            "input_size": 512,
            "output_size": 8,
            "num_layers": 6,
            "nhead": 8
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 8,
            "hidden_sizes": [4],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "BongardDataLoader",
        "args":{
            "data_dir": "/Disk4/xuyue/reasoning/bongard/bongard-problems/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/Disk6/xuyue/reasoning/saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": false,
        "wandb": false
    },
    "optuna": {
        "n_trials": 100,
        "study_name": "Bongard_bz16_Transformer",
        "storage": "sqlite:///saved/optuna/bongard.db",
        "load_if_exists": true,
    
        "monitor": "max val_accuracy",
    
        "models": {
            "dropout": {
                "min": 0,
                "max": 0.8
            }
        },
    
        "params": {
            "learning_rate": {
                "min": 1e-6,
                "max": 1e-3
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        }
    }
}

