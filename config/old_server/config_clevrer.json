{
    "name": "Clevrer",
    "n_gpu": 4,
    "feature_model": {
        "type": "ClevrerEncoder",
        "args": {
            "in_planes": 1,
            "out_planes": 512
            
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 8
        }
    },
    "head_model": {
        "type": "RavenHead",
        "args": {}
    },
    "data_loader": {
        "type": "ClevrerDataLoader",
        "args":{
            "data_dir": "/Disk4/xuyue/reasoning/jiting/video_frames",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}