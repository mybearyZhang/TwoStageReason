{
    "name": "Bongard_Logo",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 14,
            "pretrained": false,
            "dropout": 0.23941393720765342
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 8
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 8,
            "hidden_sizes": [4],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "BongardLogoDataLoader",
        "args":{
            "data_dir": "/Disk4/xuyue/reasoning/bongard/ShapeBongard_V2",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001564241847484905,
            "weight_decay": 2.8910155716795713e-06,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
