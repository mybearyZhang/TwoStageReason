{
    "name": "sota-RAVEN",
    "n_gpu": 4,
    "feature_model": {
        "type": "RavenFeature",
        "args": {
            "dropout": 0.3498992409645899
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 8
        }
    },
    "head_model": {
        "type": "RavenHead",
        "args": {}
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "/Disk4/xuyue/reasoning/RAVEN-10000/",
            "batch_size": 16,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
