{
    "name": "res34-CVR-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet34Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "reshape": "CVR"
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8,
            "reshape": "CVR"
        }
    },
    "data_loader": {
        "type": "CvrDataLoader",
        "args":{
            "data_dir": "../DATA/CVR",
            "batch_size": 32,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4,
            "n_samples": 1000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0003380407491284543,
            "weight_decay": 4.794762341383059e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": false,
        "wandb": true
    },
    "optuna//": {
        "n_trials": 100,
        "study_name": "CVR_bz32_full",
        "storage": "sqlite:///saved/optuna/cvr34_shift.db",
        "load_if_exists": true,

        "monitor": "max val_accuracy",

        "params": {
            "learning_rate": {
                "min": 1e-6,
                "max": 1e-3
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        }
    }
}
