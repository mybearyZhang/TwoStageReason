{
    "name": "VQA",
    "n_gpu": 1,
    "feature_model": {
        "type": "VQAencoder",
        "args": {
            "embed_size": 512,
            "qst_vocab_size":13189, 
            "word_embed_size":300, 
            "qst_embed_size":512, 
            "num_layers":2, 
            "hidden_size":512
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [64],
            "output_size": 1000
        }
    },
    "data_loader": {
        "type": "VQADataLoader",
        "args":{
            "data_dir": "/home/mingyu/reasoning/COCO-2015/Resized_Images",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6,
            "n_samples": 8000
            
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.006819735857126263,
            "weight_decay": 1.2618760078995198e-06,
            "amsgrad": true
        }
    },
    "loss": "vqa_loss",
    "metrics": [
        "VQAaccuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "max val_VQAaccuracy",
        "early_stop": 30,

        "tensorboard": false,
        "wandb": true
    }
}