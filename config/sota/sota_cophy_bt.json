{
    "name": "sota_cophybt",
    "n_gpu": 1,
    "feature_model": {
        "type": "CFEncoder",
        "args": {
            "state_size": 14,
            "z_size": 512
            
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "CFDecoder",
        "args": {
            "state_size": 14,
            "z_size": 64
            
        }
    },
    "data_loader": {
        "type": "FCBlockTowerDataLoader",
        "args":{
            "data_dir": "../DATA/cophydataset/OUTPUT_PATH",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001992414017909575,
            "weight_decay": 3.2305643561492355e-07,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "CFScore"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": false,
        "wandb": true
    }
}