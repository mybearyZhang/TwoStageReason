{
    "name": "sota-SVRT",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "dropout": 0.13713746566589535
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "SvrtDataLoader",
        "args":{
            "data_dir": "../DATA/svrt/results_problem_21/",
            "batch_size": 8,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.422948632267287e-05,
            "weight_decay": 6.662823769423705e-05,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/SSD/mingyu/reasoning/saved",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
