{
    "name": "RotateCophy",
    "n_gpu": 1,
    "feature_model": {
        "type": "MiniConvEncoder",
        "args": {
            "img_size": 224,
            "num_channels": 450,
            "embed_dim": 3
        }
    },
    "reason_model": {
        "type": "CLIP_MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [18],
            "output_size": 18
        }
    },
    "data_loader": {
        "type": "RotateCophyDataLoader",
        "args":{
            "data_dir": "/home/mingyu/DATA/ROTATE_DATA_20",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "sector": 18
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 6.099588122263711e-05,
            "weight_decay": 9.623792318462509e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": false,
        "wandb": false
    }
}