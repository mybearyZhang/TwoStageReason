{
    "name": "cotrain-MLP",
    "n_gpu": 1,
    "feature_models": {
        "RAVEN": {
            "type": "ResNet50Encoder",
            "args": {
                "num_channels": 16,
                "pretrained": false
            }
        },
        "CVR": {
            "type": "ResNet50Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false,
                "reshape": "CVR"
            }
        },
        "SVRT": {
            "type": "ResNet50Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false
            }
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 2048,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_models": {
        "RAVEN": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 8
            }
        },
        "CVR": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 8,
                "reshape": "CVR"
            }
        },
        "SVRT": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        }
    },
    "data_loaders": {
        "RAVEN": {
            "type": "RavenDataLoader",
            "args": {
                "data_dir": "../DATA/RAVEN-10000/",
                "batch_size": 16,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4,
                "n_samples": -1
            }
        },
        "CVR": {
            "type": "CvrDataLoader",
            "args":{
                "data_dir": "../DATA/CVR",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4,
                "n_samples": 1000
            }
        },
        "SVRT": {
            "type": "SvrtDataLoader",
            "args":{
                "data_dir": "../DATA/svrt/results_problem_21/",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4,
                "n_samples": -1
            }
        }
    },
    "optimizers": {
        "RAVEN": {
            "type": "Adam",
            "args": {
                "lr": 0.0008489423146014463,
                "weight_decay": 2.34305739975496e-06,
                "amsgrad": true
            }
        },
        "CVR": {
            "type": "Adam",
            "args":{
                "lr": 0.0004764837399838524,
                "weight_decay": 7.007529225234084e-07,
                "amsgrad": true
            }
        },
        "SVRT": {
            "type": "Adam",
            "args":{
                "lr": 0.00029708645800507734,
                "weight_decay": 1.0114219359256383e-08,
                "amsgrad": true
            }
        },
        "reasoning": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "RAVEN": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "CVR": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "SVRT": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "reasoning": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "losses": {
        "RAVEN": "cross_entropy_loss",
        "CVR": "cross_entropy_loss",
        "SVRT": "cross_entropy_loss"
    },
    "metrics": {
        "RAVEN": ["accuracy"],
        "CVR": ["accuracy"],
        "SVRT": ["accuracy"]
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "max total_val_acc",
        "early_stop": 30,

        "entry_epochs": {
            "RAVEN": 0,
            "CVR": 0,
            "SVRT": 0
        },

        "pick_prob": true,

        "tensorboard": false,
        "wandb": true
    }
}
