{
    "name": "multi-RAVEN-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 42,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "freeze": true
        },
        "pretrained": {
            "path_adhoc": "saved/best_models/MLP64/BongardHOI/model_best.pth",
            "path": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "cotrain": true,
            "key": "BongardHOI"
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64,
            "freeze": true
        },
        "pretrained": {
            "path_adhoc": "saved/best_models/MLP64/BongardHOI/model_best.pth",
            "path": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "cotrain": true,
            "key": "BongardHOI"
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 2
        },
        "pretrained": {
            "path_adhoc": "saved/best_models/MLP64/BongardHOI/model_best.pth",
            "path": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "cotrain": true,
            "key": "BongardHOI"
        }
    },
    "head_model_multi": {
        "type": "MultipleChoiceHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 2
        },
        "pretrained": {
            "path": "saved/models/multi-BongardHOI/0517_110009/checkpoint-epoch24.pth",
            "path_adhoc": "saved/models/multi-BongardHOI/0517_110254/checkpoint-epoch24.pth",
            "cotrain": false,
            "key": "BongardHOI"
        }
    },
    "data_loader": {
        "type": "BongardHoiDataLoader",
        "args":{
            "data_dir": "../DATA/hake",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "multiple_choice_loss",
    "metrics": [
        "multiple_choice_f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": false,
        "wandb": true
    }
}
