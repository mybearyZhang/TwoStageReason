{
    "name": "deep-RAVEN-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 16,
            "pretrained": false
        }
    },
    "reason_model": {
        "type": "ResMLP",
        "args": {
            "input_size": 512,
            "hidden_size": 64,
            "output_size": 32,
            "num_blocks": 8
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 32,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "../DATA/RAVEN-10000/",
            "batch_size": 64,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
