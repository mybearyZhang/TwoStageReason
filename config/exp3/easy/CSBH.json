{
    "name": "Exp3-CSBH",
    "n_gpu": 4,
    "feature_models": {
        "CVR": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false,
                "dropout": 0.4,
                "reshape": "CVR"
            }
        },
        "SVRT": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false,
                "dropout": 0.13713746566589535
            }
        },
        "Bongard": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 12,
                "pretrained": false,
                "dropout": 0.3498992409645899
            }
        },
        "BongardHOI": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 42,
                "pretrained": false,
                "dropout": 0.34733180040523426
            }
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_models": {
        "CVR": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 8,
                "reshape": "CVR"
            }
        },
        "SVRT": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        },
        "Bongard": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        },
        "BongardHOI": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        }
    },
    "data_loaders": {
        "CVR": {
            "type": "CvrDataLoader",
            "args":{
                "data_dir": "../DATA/CVR",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4,
                "n_samples": 1000
            }
        },
        "SVRT": {
            "type": "SvrtDataLoader",
            "args":{
                "data_dir": "../DATA/svrt/results_problem_21/",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4
            }
        },
        "Bongard": {
            "type": "BongardDataLoader",
            "args":{
                "data_dir": "../DATA/bongard/bongard-problems/",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 4
            }
        },
        "BongardHOI": {
            "type": "BongardHoiDataLoader",
            "args":{
                "data_dir": "../DATA/hake",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 4
            }
        } 
    },
    "optimizers": {
        "CVR": {
            "type": "Adam",
            "args":{
                "lr": 0.00029904578291150197,
                "weight_decay": 1.400912257368821e-07,
                "amsgrad": true
            }
        },
        "SVRT": {
            "type": "Adam",
            "args":{
                "lr": 7.422948632267287e-05,
                "weight_decay": 6.662823769423705e-05,
                "amsgrad": true
            }
        },
        "Bongard": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        },
        "BongardHOI": {
            "type": "Adam",
            "args":{
                "lr": 0.00012109488400553044,
                "weight_decay": 1.8443672512857624e-05,
                "amsgrad": true
            }
        },
        "reasoning": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "CVR": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "SVRT": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "Bongard": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "BongardHOI": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "reasoning": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "losses": {
        "CVR": "cross_entropy_loss",
        "SVRT": "cross_entropy_loss",
        "Bongard": "cross_entropy_loss",
        "BongardHOI": "cross_entropy_loss"
    },
    "metrics": {
        "CVR": ["accuracy"],
        "SVRT": ["accuracy"],
        "Bongard": ["accuracy"],
        "BongardHOI": ["accuracy"]
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "max total_val_acc",
        "early_stop": 30,

        "entry_epochs": {
            "CVR": 63,
            "SVRT": 0,
            "Bongard": 42,
            "BongardHOI": 30
        },

        "pick_prob": true,

        "tensorboard": false,
        "wandb": true
    }
}
