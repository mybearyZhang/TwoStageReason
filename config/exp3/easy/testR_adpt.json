{
    "name": "Exp3-testR-adpt",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 16,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "freeze": true,
            "state": 4
        },
        "pretrained": {
            "path": "saved/best_models/MLP64/RAVEN/model_best.pth",
            "cotrain": false
        }
    },
    "reason_model": {
        "type": "Identity",
        "args": {}
    },
    "reason_model_dis": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64,
            "freeze": true
        },
        "pretrained_disable": {
            "path": "saved/best_models/MLP64/CVR/model_best.pth",
            "cotrain": false
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8,
            "freeze": true
        },
        "pretrained": {
            "path": "saved/best_models/MLP64/RAVEN/model_best.pth",
            "cotrain": false
        }
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "../DATA/RAVEN-10000/",
            "batch_size": 16,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "adapter": {
            "input_size": 64,
            "output_size": 64,
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08
        },

        "tensorboard": false,
        "wandb": false
    }
}
