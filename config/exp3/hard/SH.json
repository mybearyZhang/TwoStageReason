{
    "name": "Exp3-SH",
    "n_gpu": 1,
    "feature_models": {
        "SVRT": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 3,
                "pretrained": false,
                "dropout": 0.13713746566589535
            }
        },
        "BongardHOI": {
            "type": "ResNet18Encoder",
            "args": {
                "num_channels": 42,
                "pretrained": false,
                "dropout": 0.34733180040523426
            }
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_models": {
        "SVRT": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        },
        "BongardHOI": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 2
            }
        }
    },
    "data_loaders": {
        "SVRT": {
            "type": "SvrtDataLoader",
            "args": {
                "data_dir": "../DATA/svrt/results_problem_21/",
                "batch_size": 8,
                "shuffle": true,
                "split": "train",
                "validation_split": 0,
                "num_workers": 4
            }
        },
        "BongardHOI": {
            "type": "BongardHoiDataLoader",
            "args": {
                "data_dir": "../DATA/hake",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 4
            }
        }
    },
    "optimizers": {
        "SVRT": {
            "type": "Adam",
            "args": {
                "lr": 7.422948632267287e-05,
                "weight_decay": 6.662823769423705e-05,
                "amsgrad": true
            }
        },
        "BongardHOI": {
            "type": "Adam",
            "args": {
                "lr": 0.00012109488400553044,
                "weight_decay": 1.8443672512857624e-05,
                "amsgrad": true
            }
        },
        "reasoning": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "SVRT": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "BongardHOI": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "reasoning": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "losses": {
        "SVRT": "cross_entropy_loss",
        "BongardHOI": "cross_entropy_loss"
    },
    "metrics": {
        "SVRT": ["accuracy"],
        "BongardHOI": ["accuracy"]
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "max total_val_acc",
        "early_stop": 30,

        "entry_epochs": {
            "SVRT": 0,
            "BongardHOI": 0
        },

        "pick_prob": true,

        "tensorboard": false,
        "wandb": true
    }
}
