{
    "name": "Exp3-B-S",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 16,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "freeze": true
        },
        "pretrained": {
            "path": "saved/best_models/MLP64/VQA/model_best.pth",
            "cotrain": false
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64,
            "freeze": true
        },
        "pretrained_disable": {
            "path": "saved/models/Exp3-SHAL/1028_231036/checkpoint-epoch75.pth",
            "cotrain": false
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8,
            "freeze": true
        },
        "pretrained": {
            "path": "saved/best_models/MLP64/VQA/model_best.pth",
            "cotrain": false
        }
    },
    "data_loader": {
        "type": "VQADataLoader",
        "args":{
            "data_dir": "/home/mingyu/reasoning/COCO-2015/Resized_Images",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6,
            "n_samples": 8000
            
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0009355283618633292,
            "weight_decay": 1.9813631447162124e-05,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "CFScore"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        

        "tensorboard": false,
        "wandb": false
    }
}