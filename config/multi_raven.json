{
    "name": "multi-RAVEN-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 16,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "freeze": true
        },
        "pretrained": {
            "path": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "cotrain": true,
            "key": "RAVEN"
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64,
            "freeze": true
        },
        "pretrained": {
            "path": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "cotrain": true
        }
    },
    "head_model": {
        "type": "MultipleChoiceHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "../DATA/RAVEN-10000/",
            "batch_size": 64,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "multiple_choice_loss",
    "metrics": [
        "multiple_choice"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": false
    }
}
