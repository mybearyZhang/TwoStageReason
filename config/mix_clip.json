{
    "name": "mix-clip",
    "n_gpu": 1,
    "feature_models": {
        "Hake": {
            "type": "MiniConvEncoder",
            "args": {
                "img_size": 80,
                "num_channels": 3,
                "embed_dim": 3
            }
        },
        "Cophy": {
            "type": "MiniConvEncoder",
            "args": {
                "img_size": 224,
                "num_channels": 450,
                "embed_dim": 3
            }
        }
    },
    "reason_model": {
        "type": "CLIP_MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_models": {
        "Hake": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 8
            }
        },
        "Cophy": {
            "type": "MLPHead",
            "args": {
                "input_size": 64,
                "hidden_sizes": [8],
                "output_size": 8
            }
        }
    },
    "data_loaders": {
        "Hake": {
            "type": "RotateHakeDataLoader",
            "args":{
                "data_dir": "/home/mingyu/DATA/hake/hake_images_20190730/",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 4,
                "task": "class",
                "sector": 8
            }
        },
        "Cophy": {
            "type": "RotateCophyDataLoader",
            "args":{
                "data_dir": "/home/mingyu/DATA/ROTATE_DATA_45",
                "batch_size": 16,
                "shuffle": true,
                "validation_split": 0.1,
                "num_workers": 4,
                "sector": 8
            }
        }
    },
    "optimizers": {
        "Hake": {
            "type": "Adam",
            "args": {
                "lr": 1e-5,
                "weight_decay": 1e-8,
                "amsgrad": true
            }
        },
        "Cophy": {
            "type": "Adam",
            "args": {
                "lr": 1e-5,
                "weight_decay": 1e-8,
                "amsgrad": true
            }
        },
        "reasoning": {
            "type": "Adam",
            "args":{
                "lr": 5e-5,
                "weight_decay": 1e-7,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "Hake": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "Cophy": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "reasoning": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "losses": {
        "Hake": "cross_entropy_loss",
        "Cophy": "cross_entropy_loss"
    },
    "metrics": {
        "Hake": ["accuracy"],
        "Cophy": ["accuracy"]
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "max total_val_acc",
        "early_stop": 30,

        "entry_epochs": {
            "Hake": 0,
            "Cophy": 0
        },

        "pick_prob": true,

        "tensorboard": false,
        "wandb": false
    }
}
