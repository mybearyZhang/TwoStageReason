{
    "name": "res50-SVRT",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet50Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 2048,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "SvrtDataLoader",
        "args":{
            "data_dir": "../DATA/svrt/results_problem_21/",
            "batch_size": 64,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00029708645800507734,
            "weight_decay": 1.0114219359256383e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/SSD/mingyu/reasoning/saved",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": false
    },
    "optuna//": {
        "n_trials": 100,
        "study_name": "SVRT_bz64_full",
        "storage": "sqlite:///saved/optuna/svrt50_shift.db",
        "load_if_exists": true,

        "monitor": "max val_accuracy",

        "params": {
            "learning_rate": {
                "min": 1e-6,
                "max": 1e-3
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        }
    }
}
