{
    "name": "GPT",
    "n_gpu": 1,
    "feature_model": {
        "type": "ConvEncoder",
        "args": {
            "num_channels": 3,
            "img_size": 128
        }
    },
    "reason_model": {
        "type": "LLM",
        "args": {
            "input_size": 512,
            "output_size": 64,
            "img_size": 128,
            "prompt_instruction": "<Img><ImageHere></Img> Focus on the two geometrical shapes in the image. Do they share the same shape"
       
        }
    },
    "head_model": {
        "type": "GPTHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "SvrtDataLoader",
        "args":{
 			"data_dir": "../DATA/svrt/results_problem_21/",
            "batch_size": 8,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 2,
            "n_samples": 1000,
            "val_samples": 1000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}
