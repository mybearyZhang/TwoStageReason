{
    "name": "VQA",
    "n_gpu": 1,
    "feature_model": {
        "type": "VQAencoder",
        "args": {
            "embed_size": 512,
            "qst_vocab_size":13189, 
            "word_embed_size":300, 
            "qst_embed_size":512, 
            "num_layers":2, 
            "hidden_size":512
        }
    },
    "reason_model": {
        "type": "PCNN",
        "args": {
            "input_size": 512,
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [64],
            "output_size": 1000
        }
    },
    "data_loader": {
        "type": "VQADataLoader",
        "args":{
            "data_dir": "../DATA/COCO-2015/Resized_Images",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6,
            "n_samples": 10000,
            "val_samples": 1000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "vqa_loss",
    "metrics": [
        "VQAaccuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "max val_VQAaccuracy",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    },
    "optuna": {
        "n_trials": 100,
        "study_name": "VQA_NS_1117",
        "storage": "sqlite:///saved/optuna/VQA.db",
        "load_if_exists": true,

        
        "monitor":"max val_VQAaccuracy",
        
        "params": {
            "learning_rate": {
                "min": 1e-5,
                "max": 1e-2
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        
        }
    }
}