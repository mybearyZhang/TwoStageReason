{
    "name": "clip-LOGO-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "MiniConvEncoder",
        "args": {
            "img_size": 224,
            "num_channels": 42,
            "embed_dim": 3
        }
    },
    "reason_model": {
        "type": "CLIP_MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "BongardHoiDataLoader",
        "args":{
            "data_dir": "../DATA/hake",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "top_2_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    },
    "optuna": {
        "n_trials": 100,
        "study_name": "CLIP_HOI",
        "storage": "sqlite:///saved/optuna/hoi.db",
        "load_if_exists": true,
        
        "monitor":"max val_accuracy",
        
        "params": {
            "learning_rate": {
                "min": 1e-5,
                "max": 1e-2
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        
        }
    }
}
