{
    "name": "cophyballs",
    "n_gpu": 4,
    "feature_model": {
        "type": "CFEncoder",
        "args": {
            "state_size": 14,
            "z_size": 512,
            "keep_dim": true
        }
    },
    "reason_model": {
        "type": "CNN",
        "args": {
            "input_size": 512,
            "output_size": 64
        }
    },
    "head_model": {
        "type": "CFDecoder",
        "args": {
            "state_size": 14,
            "z_size": 64
        }
    },
    "data_loader": {
        "type": "FCBallsDataLoader",
        "args":{
            "data_dir": "../DATA/cophydataset/OUTBALLS",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 6
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "CFScore"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}