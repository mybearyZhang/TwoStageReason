{
    "name": "cophybt-optuna",
    "n_gpu": 1,
    "feature_model": {
        "type": "CFEncoder",
        "args": {
            "state_size": 14,
            "z_size": 512,
            "keep_dim": false
            
        }
    },
    "reason_model": {
        "type": "PCNN",
        "args": {
            "input_size": 512,
            "output_size": 64
        }
    },
    "head_model": {
        "type": "CFDecoder",
        "args": {
            "state_size": 14,
            "z_size": 64,
            "keep_dim": false
        }
    },
    "data_loader": {
        "type": "FCBlockTowerDataLoader",
        "args":{
            "data_dir": "../DATA/cophydataset/OUTPUT_PATH",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "CFScore"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    },
    "optuna": {
        "n_trials": 100,
        "study_name": "Cophyblocktower_bz16_NS",
        "storage": "sqlite:///saved/optuna/cophybt.db",
        "load_if_exists": true,

        
        "monitor":"min CFScore",
        
        "params": {
            "learning_rate": {
                "min": 1e-5,
                "max": 1e-2
            },
            "weight_decay": {
                "min": 1e-8,
                "max": 1e-3
            }
        }
    }

}