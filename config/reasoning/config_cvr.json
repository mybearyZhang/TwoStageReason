{
    "name": "CVR-Res7",
    "n_gpu": 4,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "dropout": 0.3498992409645899,
            "reshape": "CVR",
            "state": -2
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8,
            "reshape": "CVR"
        }
    },
    "data_loader": {
        "type": "CvrDataLoader",
        "args":{
            "data_dir": "../DATA/CVR",
            "batch_size": 8,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4,
            "n_samples": 1000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0003663133221267387,
            "weight_decay": 3.3257157891906423e-06,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": false,
        "wandb": true
    }
}
