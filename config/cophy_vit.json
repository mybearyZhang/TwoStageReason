{
    "name": "cophy-vit",
    "n_gpu": 1,
    "feature_model": {
        "type": "CophyEncode",
        "args": {
            
        }
    },
    "reason_model": {
        "type": "PretrainedViT",
        "args": {
            "num_classes": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 1024,
            "hidden_sizes": [32],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "RotateCophyDataLoader",
        "args":{
            "data_dir": "/home/mingyu/DATA/ROTATE_DATA_45",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "sector": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}
