{
    "name": "RAVEN-EBM",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 16,
            "pretrained": false,
            "dropout": 0.3498992409645899
        }
    },
    "reason_model": {
        "type": "EBM",
        "args": {
            "input_size": 1024,
            "hidden_size": 128,
            "repeat_size": 512
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 8,
            "hidden_sizes": [8],
            "output_size": 8
        }
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "/HDD/DATA/mingyu/reasoning/RAVEN-10000/",
            "batch_size": 16,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/SSD/mingyu/reasoning/saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}
