{
    "name": "Bongard",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 12,
            "pretrained": false,
            "dropout": 0.3498992409645899
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 8
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 8,
            "hidden_sizes": [4],
            "output_size": 2
        }
    },
    "data_loader": {
        "type": "BongardDataLoader",
        "args":{
            "data_dir": "/HDD/mingyu/reasoning/bongard/bongard-problems/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-5,
            "weight_decay": 1e-7,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/SSD/mingyu/reasoning/saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": true
    }
    
}
