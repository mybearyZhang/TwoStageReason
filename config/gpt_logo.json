{
    "name": "GPT",
    "n_gpu": 1,
    "feature_model": {
        "type": "ConvEncoder",
        "args": {
            "num_channels": 16,
            "img_size": 80
        }
    },
    "reason_model": {
        "type": "LLM",
        "args": {
            "input_size": 512,
            "output_size": 64,
            "prompt_instruction": "<Img><ImageHere></Img> According to the relationship between images, what is the correct answer of the blank one?"
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 1,
            "hidden_sizes": [1],
            "output_size": 1
        }
    },
    "data_loader": {
        "type": "RavenDataLoader",
        "args":{
            "data_dir": "../DATA/RAVEN-10000/",
            "batch_size": 1,
            "shuffle": true,
            "split": "train",
            "validation_split": 0,
            "num_workers": 4,
            "n_samples": 1000,
            "val_samples": 1000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-05,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}
