{
    "name": "phy-clip",
    "n_gpu": 1,
    "feature_model": {
        "type": "MiniConvEncoder",
        "args": {
            "img_size": 80,
            "num_channels": 3,
            "embed_dim": 3
        }
    },
    "reason_model": {
        "type": "CLIP_MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64
        }
    },
    "head_model": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [32],
            "output_size": 16
        }
    },
    "data_loader": {
        "type": "RotateHakeDataLoader",
        "args":{
            "data_dir": "/home/mingyu/DATA/hake/hake_images_20190730/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "task": "class",
            "sector": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 7.179440669483468e-04,
            "weight_decay": 1.0045281958616361e-08,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false,
        "wandb": false
    }
}
