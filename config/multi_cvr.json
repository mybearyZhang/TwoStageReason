{
    "name": "multi-CVR-MLP",
    "n_gpu": 1,
    "feature_model": {
        "type": "ResNet18Encoder",
        "args": {
            "num_channels": 3,
            "pretrained": false,
            "dropout": 0.4,
            "reshape": "CVR",
            "freeze": true
        },
        "pretrained": {
            "path_co": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "path": "saved/best_models/MLP64/CVR/model_best.pth",
            "cotrain": false,
            "key": "CVR"
        }
    },
    "reason_model": {
        "type": "MLP",
        "args": {
            "input_size": 512,
            "hidden_sizes": [128],
            "output_size": 64,
            "freeze": true
        },
        "pretrained": {
            "path_co": "saved/models/cotrain-MLP/0515_161959/checkpoint-epoch87.pth",
            "path": "saved/best_models/MLP64/CVR/model_best.pth",
            "cotrain": false
        }
    },
    "head_model": {
        "type": "MultipleChoiceHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 8,
            "reshape": "CVR"
        }
    },
    "head_model2": {
        "type": "MLPHead",
        "args": {
            "input_size": 64,
            "hidden_sizes": [8],
            "output_size": 4
        }
    },
    "data_loader": {
        "type": "CvrDataLoader",
        "args":{
            "data_dir": "../DATA/CVR",
            "batch_size": 32,
            "shuffle": true,
            "split": "train",
            "validation_split": 0.1,
            "num_workers": 4,
            "n_samples": 5000
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00029904578291150197,
            "weight_decay": 1.400912257368821e-07,
            "amsgrad": true
        }
    },
    "loss": "multiple_choice_loss",
    "metrics": [
        "multiple_choice"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 3,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": false,
        "wandb": false
    }
}
